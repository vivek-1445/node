<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/css/custom.css">
    </head>

    <body>
        <div class="content">
        <a href="/">
            <button type="submit" class="registerbtn" style="width: 20%;">Add Data</button>
        </a>
        <table >
            <tr>
              <th>Name</th>
              <th>Mail</th>
              <th>Phone No</th>
              <th>Password</th>
              <th>Action</th>
            </tr>
            <% for(let d  of Data) {  %>
                <tr>
                    <td><%= d.name %></td>
                    <td><%= d.mail %></td>
                    <td><%= d.phone %></td>
                    <td><%= d.password %></td>
                    <td><a href="/delete-data/?id=<%= d._id %>"><button class="del-btn">Delete</button></a>
                        <a href="/update-data/?id=<%= d._id %>"><button class="upd-btn">Update</button></a></td>
                </tr>
            <% } %>
          </table>
        </div>
    </body>
</html>